{{ header }}
<main class="main-page container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <section class="row">
                <div class="col-md-4 col-lg-6">
                    <div class="breadcrumbs">
                        {% for breadcrumb in breadcrumbs %}
                            {% if not loop.last %}
                                <a href="{{ breadcrumb.href }}">
                                    {{ breadcrumb.text }}
                                </a>
                                <span class="divider">/</span>
                            {% else %}
                                <span>{{ breadcrumb.text }}</span>
                            {% endif %}
                        {% endfor %}
                    </div>
                </div>
                <div class="col-md-8 col-lg-6">
                    <melle-catalog-sort></melle-catalog-sort>
                </div>
            </section>
        </div>

        <div class="col-lg-12">
            <section class="row catalog">
                <div class="d-none d-lg-block col-lg-4 col-xl-3 col-xxl-2">
                    {# FILTER START #}
                    {% if rfc %}
                        <div id="rendered-filter-content">
                            {{ rfc }}
                        </div>
                    {% endif %}
                    <melle-catalog-filter></melle-catalog-filter>
                    {# FILTER END #}
                </div>
                <div class="col-lg-8 col-xl-9 col-xxl-10">
                    {# CONTENT START #}
                    {% if rcc %}
                        <div id="rendered-catalog-content">
                            {{ rcc }}
                        </div>
                    {% endif %}
                    <melle-catalog-content></melle-catalog-content>
                    {# CONTENT END #}

                    {{ recently_viewed }}

                    {% if description %}
                        <details>
                            <summary>
                                Показать полностью
                            </summary>
                            <br />
                            <article style="column-count: 2;">
                                {{ description }}
                            </article>
                        </details>
                    {% endif %}
                </div>
            </section>
        </div>
    </div>
</main>
{{ footer }}
