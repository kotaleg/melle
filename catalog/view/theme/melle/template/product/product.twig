{{ header }}
<main class="main-page">
   <section class="breadcrumbs">
      <div class="breadcrumbs__container container">
         <div class="breadcrumbs__inner">
            {% for breadcrumb in breadcrumbs %}
            {% if not loop.last %}
            <a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a><span>/</span>
            {% else %}
            <span>{{ breadcrumb.text }}</span>
            {% endif %}
            {% endfor %}
         </div>
      </div>
   </section>

   <div class="prod-card">
      <div class="prod-card__container container">
         <div class="prod-card__content">
            <div class="prod-card__content-main">

               {% if thumb or images %}
               <div class="prod-card__photos">
                  <ul class="prod-card__list-photo slider-nav">
                     {% if thumb %}
                     <li class="prod-card__item-photo"><img src="{{thumb}}"></li>
                     {% endif %}
                     {% for i in images %}
                     <li class="prod-card__item-photo"><img src="{{i.thumb}}"></li>
                     {% endfor %}
                  </ul>
                  <ul class="prod-card__list-big-photo slider-for">
                     {% if thumb %}
                     <li class="prod-card__item-big-photo" data-zoom-image="{{popup}}">
                        <img src="{{popup}}">
                     </li>
                     {% endif %}
                     {% for i in images %}
                     <li class="prod-card__item-big-photo">
                        <img src="{{i.popup}}" data-zoom-image="{{i.popup}}">
                     </li>
                     {% endfor %}
                  </ul>
               </div>
               {% endif %}

               <div class="prod-card__info">

                  {% if znachek %}
                  <div class="prod-card__category"><span>{{znachek}}</span></div>
                  {% endif %}

                  <h1 class="prod-card__title">{{h1}}</h1>

                  <!-- PRODUCT ELEMENT -->
                  {% if rpc %}
                  <div id="rendered-product-content">{{rpc}}</div>
                  {% endif %}
                  <melle-product></melle-product>

                  <div class="prod-card__description">{{description}}</div>

                  {% if manufacturer %}
                  <div class="prod-card__manufacturer">
                     <span>производитель: </span><a href="{{manufacturers}}">{{manufacturer}}</a>
                  </div>
                  {% endif %}

                  {% if den %}
                  <div class="prod-card__manufacturer">
                     <span>количество ден: </span>{{den}}
                  </div>
                  {% endif %}

                  {% if sostav %}
                  <div class="prod-card__manufacturer">
                     <span>состав: </span>{{sostav}}
                  </div>
                  {% endif %}
               </div>
            </div>

            {% if products %}
            <div class="other-prod">
               <h3 class="other-prod__title">Похожие товары</h3>
               <ul class="">
                  {% for p in products %}
                  <li class="other-prod__item {{p.znachek_class}}">
                     <a href="{{p.href}}" class="other-prod__item-link"><img src="{{p.thumb}}" alt="{{p.h1}}"></a>
                     <div class="other-prod__item-ivaninfo">
                        <div class="row">
                           <div class="col-xs-12">
                              <h3 class="ivanitemtitle"><a href="{{p.href}}">{{p.h1}} </a></h3>
                           </div>
                           <div class="col-xs-7"><span class="other-prod__item-price-default">{{p.price}}<span class="ruble-sign">Р</span></span></div>
                           <div class="col-xs-5">
                              <div><a href="{{p.href}}" class="ivanbuybutton">Купить</a></div>
                           </div>
                        </div>
                     </div>
                  </li>
                  {% endfor %}
               </ul>
            </div>
            {% endif %}

            {% if recently_viewed %}
            <div class="other-prod">
               <h3 class="other-prod__title">Вы смотрели</h3>
               <ul class="">
                  {% for p in recently_viewed %}
                  <li class="other-prod__item {{znachek_class}}">
                     <a href="{{p.href}}" class="other-prod__item-link"><img src="{{p.thumb}}" alt="{{p.h1}}"></a>
                     <div class="other-prod__item-ivaninfo">
                        <div class="row">
                           <div class="col-xs-12">
                              <h3 class="ivanitemtitle"><a href="{{p.href}}">{{p.h1}} </a></h3>
                           </div>
                           <div class="col-xs-7"><span class="other-prod__item-price-default">{{p.price}}<span class="ruble-sign">Р</span></span></div>
                           <div class="col-xs-5">
                              <div><a href="{{p.href}}" class="ivanbuybutton">Купить</a></div>
                           </div>
                        </div>
                     </div>
                  </li>
                  {% endfor %}
               </ul>
            </div>
            {% endif %}

            <!-- PRODUCT REWIEW -->
            <melle-product-review></melle-product-review>

         </div>
      </div>
   </div>

</main>
{{ footer }}
