<head>
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta http-equiv="Accept-CH" content="DPR, Viewport-Width, Width">
{% if description %}
<meta name="description" content="{{ description }}" />
{% endif %}
<meta property="og:site_name" content="{{site_name}}" />
<meta property="og:url" content='{{base}}'/>
<meta property="og:title" content="{{title}}"/>
<meta property="og:image" content="{{og.image}}"/>
<meta property="og:description" content="{{description}}"/>
<meta name="twitter:card" content="summary_large_image"/>
<meta name="twitter:image" content="{{og.image}}"/>

<meta name="yandex-verification" content="25a6a52c8f079663" />

<title>{{ title }}</title>
<base href="{{ base }}" />

<link rel="preload" href="{{base}}catalog/view/theme/melle/fonts/CenturyGothic-Bold.woff" as="font" type="font/woff" crossorigin>
<link rel="preload" href="{{base}}catalog/view/theme/melle/fonts/PTRoubleSans.otf" as="font" type="font/otf" crossorigin>
<link rel="preload" href="{{base}}catalog/view/theme/melle/fonts/CenturyGothicRegular/CenturyGothicRegular.woff" as="font" type="font/woff" crossorigin>

<link rel="preload" href="{{base}}catalog/view/javascript/jquery/jquery-2.2.4.min.js" as="script">
<link rel="preload" href="{{base}}catalog/view/theme/melle/javascript/dist/manifest.js{{cache_postfix}}" as="script">
<link rel="preload" href="{{base}}catalog/view/theme/melle/javascript/dist/vendor.js{{cache_postfix}}" as="script">
<link rel="preload" href="{{base}}catalog/view/theme/melle/javascript/dist/melle.js{{cache_postfix}}" as="script">

<link href="{{base}}catalog/view/theme/melle/stylesheet/compiled/bootstrap.css{{cache_postfix}}" rel="stylesheet" type="text/css" />

{% if pagetype == 'product' %}
<link href="{{base}}catalog/view/theme/melle/javascript/jquery/slick/slick.min.css" rel="stylesheet" type="text/css" media="(min-width: 992px)" />
<link href="{{base}}catalog/view/theme/melle/javascript/jquery/fancybox/jquery.fancybox.min.css" rel="stylesheet" type="text/css" crossorigin="anonymous" media="(min-width: 992px)" />
{% endif %}

{% for style in styles %}
<link href="{{ style.href }}{{cache_postfix}}" type="text/css" rel="{{ style.rel }}" media="{{ style.media }}" />
{% endfor %}

{% for link in links %}
<link href="{{ link.href }}" rel="{{ link.rel }}" />
{% endfor %}

<script type="text/javascript">
function injectStyle(c, l) {
  n = document.createElement("script"), o = document.getElementsByTagName("link")[0], n.rel = 'stylesheet', n.href = c, o.parentNode.insertBefore(n, o), n.onload = l
}
function injectScript(c, a, l) {
  n = document.createElement("script"), o = document.getElementsByTagName("script")[0], n.async = a, n.src = c, o.parentNode.insertBefore(n, o), n.onload = l
}
</script>

{% if pagetype == 'checkout' %}
<script src="{{base}}catalog/view/javascript/jquery/jquery-2.2.4.min.js" type="text/javascript"></script>
{% endif %}

{% for state in states %}
<script type="text/javascript">window.__{{state.codename}}__ = '{{state.json}}';</script>
{% endfor %}

{% for script in scripts %}
<script src="{{ script }}{{cache_postfix}}" type="text/javascript"></script>
{% endfor %}

{% if not is_local %}

{% for analytic in analytics %}
{{ analytic }}
{% endfor %}

