{% if posts %}
<section class="news">
   <div class="news__container container">
      <h4 class="news__title">Другие новости</h4>
      <ul class="news__list">

          {% for post in posts %}
          <li class="news__item">
              {% include template('extension/d_blog_module/post_thumb') with post %}
          </li>
          {% endfor %}

      </ul>
   </div>
</section>
{% endif %}
