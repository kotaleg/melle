{{ header }}
<main class="main-page">
   <section class="breadcrumbs">
      <div class="breadcrumbs__container container">
         <div class="breadcrumbs__inner">
            {% for breadcrumb in breadcrumbs %}
            {% if not loop.last %}
            <a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a><span>/</span>
            {% else %}
            <span>{{ breadcrumb.text }}</span>
            {% endif %}
            {% endfor %}
         </div>
      </div>
   </section>

   <section class="lk">
      <div class="lk__container container">
         <div class="lk__title">Настройки</div>
         <div class="lk__sidebar">
            <section class="lk-sidebar">
               <ul class="lk-sidebar__list">

                  <li class="lk-sidebar__item"><a href="{{account_link}}">Настройки</a></li>
                  <li class="lk-sidebar__item on"><a href="{{order_link}}">Мои заказы</a></li>
                  <li class="lk-sidebar__item"><a href="{{address_link}}">Мои адреса</a></li>

                  <li class="lk-sidebar__item">
                     <a href="{{logout_link}}">
                        Выход
                        <svg viewBox="0 0 384.971 384.971" height="14" width="14">
                           <path d="M180.455,360.91H24.061V24.061h156.394c6.641,0,12.03-5.39,12.03-12.03s-5.39-12.03-12.03-12.03H12.03C5.39,0.001,0,5.39,0,12.031V372.94c0,6.641,5.39,12.03,12.03,12.03h168.424c6.641,0,12.03-5.39,12.03-12.03C192.485,366.299,187.095,360.91,180.455,360.91z"></path>
                           <path d="M381.481,184.088l-83.009-84.2c-4.704-4.752-12.319-4.74-17.011,0c-4.704,4.74-4.704,12.439,0,17.179l62.558,63.46H96.279c-6.641,0-12.03,5.438-12.03,12.151c0,6.713,5.39,12.151,12.03,12.151h247.74l-62.558,63.46c-4.704,4.752-4.704,12.439,0,17.179c4.704,4.752,12.319,4.752,17.011,0l82.997-84.2C386.113,196.588,386.161,188.756,381.481,184.088z"></path>
                        </svg>
                     </a>
                  </li>
               </ul>
            </section>
         </div>
         <div class="lk__content">
            <section class="lk-history">
               <div class="lk-history__table-wrap">
                  <table class="lk-history__table">
                     {% if orders %}
                     <thead>
                        <tr>
                           <th>Заказ</th>
                           <th>Дата оформления</th>
                           <th>Количество товаров</th>
                           <th>Сумма заказа </th>
                           <th>Статус оплаты</th>
                           <!-- <th></th> -->
                        </tr>
                     </thead>
                     <tbody>
                        {% for order in orders %}
                        <tr>
                           <td>
                              <div class="lk-history__order"><a href="{{ order.view }}">Заказ № {{ order.order_id }}</a></div>
                           </td>
                           <td>
                              <div class="lk-history__data"><span>{{ order.date_added }}</span></div>
                           </td>
                           <td>
                              <div class="lk-history__amount"><span>{{ order.products }} </span><span>товара</span></div>
                           </td>
                           <td>
                              <div class="price_column">
                                 <div class="lk-history__price"><span class="lk-history__price-default">{{ order.total }} <span class="ruble-sign">Р</span></span></div>
                              </div>
                           </td>
                           <td>
                              <div class="lk-history__status"><span>{{ order.status }}</span></div>
                           </td>
                           <!-- <td>
                              <div class="button_column"><a href="{{order.reorder}}"><span>Повторить</span></a></div>
                           </td> -->
                        </tr>
                        {% endfor %}
                     </tbody>
                     {% endif %}
                     {% if not orders %}
                     <tfoot>
                        <tr>
                           <p>{{ text_empty }}</p>
                        </tr>
                     </tfoot>
                     {% endif %}
                  </table>
               </div>
            </section>
         </div>
      </div>
   </section>

</main>
{{ footer }}
